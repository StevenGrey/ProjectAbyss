<Page x:Class="ProjectAbyssIHM.Pages.Config"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectAbyssIHM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Options">

    <Grid>
        <Label Content="Extensions" HorizontalAlignment="Left" Margin="30,25,0,0" VerticalAlignment="Top" FontSize="16" Width="200"/>
        <CheckBox Name="AllCheck" Content="Tout Cocher"  HorizontalAlignment="Left" Margin="50,70,0,0" VerticalAlignment="Top" Checked="AllChecked" Unchecked="AllUnchecked"/>
        <CheckBox Name="KrakenCheck" Content="Kraken" HorizontalAlignment="Left" Margin="50,110,0,0" VerticalAlignment="Top" Width="93" Checked="Kraken_Checked" Unchecked="Kraken_Unchecked"/>
        <CheckBox Name="LeviCheck" Content="Léviathan" HorizontalAlignment="Left" Margin="50,140,0,0" VerticalAlignment="Top" Checked="Levi_Checked" Unchecked="Levi_Unchecked"/>
        <Button Content="Sauvegarder" HorizontalAlignment="Left" Margin="555,600,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="Save_Click"/>

    </Grid>
</Page>
