        <Label Content="Alliés Vert" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="650,484,0,0" VerticalAlignment="Top" Width="434" FontSize="16" />
        <Slider Name="nbAlliesGreen" HorizontalAlignment="Left" Margin="650,524,0,0" VerticalAlignment="Top" Width="434" Minimum="0" Maximum="25" TickFrequency="1" Ticks="1" TickPlacement="BottomRight" ValueChanged="nbAlliesGreenChanged" AutoToolTipPlacement="TopLeft"  AutoToolTipPrecision="0"/>
        <Slider Name="piAllieGreen" HorizontalAlignment="Left" Margin="650,556,0,0" VerticalAlignment="Top" Width="434" Minimum="1" Maximum="5" TickFrequency="1" Ticks="1" TickPlacement="BottomRight" ValueChanged="piAllieGreenChanged" AutoToolTipPlacement="TopLeft"  AutoToolTipPrecision="0" Visibility="Hidden"/>

        <Button HorizontalAlignment="Left" Margin="1034,653,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.5,0.5" Height="50" Click="Valid_Click" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="valid.png"/>
            </Button.Background>
        </Button>
        <Button Content="Résultat" HorizontalAlignment="Left" Margin="459,670,0,0" VerticalAlignment="Top" Width="325" RenderTransformOrigin="0.5,0.5" Height="33" Click="Result_Click"/>

    </Grid>
</Page>
